<dialogue>

	<segment id="0">
		<text>Hello. Welcome to my shop.</text>
		<next>1</next>
	</segment>
	
	<segment id="1">
		<text>We sell an assortment of items here.</text>
		<next>2</next>
	</segment>
	
	<segment id="2">
		<text>How are you feeling today?</text>
		<choice id="0">
			<text>Good.</text>
			<next>3</next>
		</choice>
		<choice id="1">
			<text>Great.</text>
			<next>3</next>
		</choice>
		<choice id="2">
			<text>Splendid!</text>
			<next>7</next>
		</choice>
		<choice id="3">
			<text>Bad.</text>
			<next>8</next>
		</choice>
	</segment>
	
	<segment id="3">
		<text>Would you like to buy something?</text>
		<choice id="0">
			<text>Yes</text>
			<next>4</next>
		</choice>
		<choice id="1">
			<text>No</text>
			<next>6</next>
		</choice>
	</segment>
	
	<segment id="4">
		<text>What would you like?</text>
		<action type="OpenShopMenu"/>
		<next>5</next>
	</segment>
	
	<segment id="5">
		<text>Would you like to buy anything else?</text>
		<choice id="0">
			<text>Yes</text>
			<next>4</next>
		</choice>
		<choice id="1">
			<text>No</text>
			<next>6</next>
		</choice>
	</segment>
	
	<segment id="6">
		<text>See you later.</text>
		<action type="TransportLevel">
			<name>Level2-SC</name>
			<xloc>201.5</xloc>
			<yloc>-15.2</yloc>
		</action>
		<action type="ProgressDialogue">
			<number>3</number>
		</action>
		<next>-1</next>
	</segment>
	
	<segment id="7">
		<text>That's great to hear. Take this for brightening my day.</text>
		<next>4</next>
		<action type="GiveGold">
			<number>100</number>
		</action>
	</segment>
	
	<segment id="8">
		<text>I'm sorry to hear that. Unfortunately, you are not allowed to have bad days around these parts. I'm afraid I'll have to fine you 100 gold.</text>
		<next>6</next>
		<action type="TakeGold">
			<number>100</number>
		</action>
	</segment>
	
</dialogue>
