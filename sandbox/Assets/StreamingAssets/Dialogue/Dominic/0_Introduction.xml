	<segment id="15">
		<text>...Huh?</text>
		<next>16</next>
	</segment>
	
	<segment id="16">
		<text>I mean, I guess I can... That's kind of a long walk though.</text>
		<action type="TransportLevel">
			<name>Level1-1-AP</name>
			<xloc>164.95</xloc>
			<yloc>-48.65</yloc>
		</action>
	</segment>
	
	<segment id="17">
		<text>Sure thing.</text>
		<action type="ProgressQuest">
			<name>Find the @</name>
			<number>-1</number>
		</action>
		<next>20</next>
	</segment>
	
	<segment id="20">
		<text>Bye, knight.</text>
	</segment>
	
