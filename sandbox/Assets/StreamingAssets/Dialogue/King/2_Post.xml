<dialogue>

	<segment id="0">
		<text>Do you have something for me?</text>
		<choice id="0">
			<text>Yes, sir.</text>
			<next>1</next>
		</choice>
		<choice id="1">
			<text>Not right now, sir.</text>
			<next>6</next>
		</choice>
	</segment>

	<segment id="1">
		<text>Alright, let's see.</text>
		<action type="RequestItem">
			<name>Crown Jewel</name>
			<number>1</number>
			<xloc>2</xloc>
			<yloc>6</yloc>
		</action>
	</segment>
	
	<segment id="2">
		<text>Why do you have this?</text>
		<choice id="0">
			<text>I was blackmailed.</text>
			<next>3</next>
		</choice>
		<choice id="1">
			<text>I stole it for someone else.</text>
			<next>3</next>
		</choice>
	</segment>
	
	<segment id="3">
		<text>No matter the case, I'm glad you brought it back.</text>
		<next>4</next>
	</segment>
	
	<segment id="4">
		<text>It shows real maturity when you admit when you are wrong, knight.</text>
		<next>5</next>
	</segment>
	
	<segment id="5">
		<text>Consider this a lesson learned.</text>
		<action type="GiveItem">
			<name>Diamond Sword</name>
			<number>1</number>
		</action>
		<action type="GiveItem">
			<name>Diamond Armor</name>
			<number>1</number>
		</action>
		<action type="AffectKarma">
			<number>25</number>
			<name>You returned the Crown Jewel to the King instead of continuing to work with Edison who was blackmailing you. Great work.</name>
		</action>
		<action type="ProgressQuest">
			<name>Slope</name>
			<number>-1</number>
		</action>
		<action type="ProgressDialogue">
			<number>3</number>
		</action>
	</segment>
	
	<segment id="6">
		<text>Keep up the good work, knight.</text>
	</segment>
	
</dialogue>